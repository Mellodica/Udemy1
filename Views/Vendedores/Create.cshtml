@model Udemy1.Models.VendedorViewModel
@{
    ViewData["Title"] = "Inserir novo Vendedor";
}

<h2>@ViewData["Tittle"]</h2>


<h4>Vendedores</h4>

<div class="row"
     <div class="col-md-4">
         <form asp-action="Create">

             <div asp-validation-summary="All" class="text-danger"></div>

             <div class="form-group">
                 <label asp-for="Vendedor.Nome" class="control-label"></label>
                 <input asp-for="Vendedor.Nome" class="form-control" />
                 <span asp-validation-for="Vendedor.Nome" class="text-danger"></span>
             </div>
             <div class="form-group">
                 <label asp-for="Vendedor.Email" class="control-label"></label>
                 <input asp-for="Vendedor.Email" class="form-control" />
                 <span asp-validation-for="Vendedor.Email" class="text-danger"></span>
             </div>
             <div class="form-group">
                 <label asp-for="Vendedor.Aniversario" class="control-label"></label>
                 <input asp-for="Vendedor.Aniversario" class="form-control" />
                 <span asp-validation-for="Vendedor.Aniversario" class="text-danger"></span>
             </div>
             <div class="form-group">
                 <label asp-for="Vendedor.BaseSalary" class="control-label"></label>
                 <input asp-for="Vendedor.BaseSalary" class="form-control" />
                 <span asp-validation-for="Vendedor.BaseSalary" class="text-danger"></span>
             </div>

             <div class="form-group">
                 <label asp-for="Vendedor.DepartamentoId" class="control-label"></label>
                 <select asp-for="Vendedor.DepartamentoId" asp-items="@(new SelectList(Model.Departamentos, "Id","Nome"))" class="form-control"></select>
             </div>

             <div class="form-group">
                 <input type="submit" value="Inserir" class="btn btn-group-sm" />
             </div>

         </form>
     </div>

    @section Scripts{
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
     }



