@model Udemy1.Models.Vendedor
@{
    ViewData["Title"] = "Inserir novo Vendedor";
}

<h2>@ViewData["Tittle"]</h2>


<h4>Vendedores</h4>

<div class="row"
     <div class="col-md-4">
         <form asp-action="Create">
             <div class="form-group">
                 <label asp-for="Nome" class="control-label"></label>
                 <input asp-for="Nome" class="form-control" />
             </div>
             <div class="form-group">
                 <label asp-for="Email" class="control-label"></label>
                 <input asp-for="Email" class="form-control" />
             </div>
             <div class="form-group">
                 <label asp-for="Aniversario" class="control-label"></label>
                 <input asp-for="Aniversario" class="form-control" />
             </div>
             <div class="form-group">
                 <label asp-for="BaseSalary" class="control-label"></label>
                 <input asp-for="BaseSalary" class="form-control" />
             </div>

             <div class="form-group">
                 <input type="submit" value="Inserir" class="btn btn-group-sm" />
             </div>

         </form>
     </div>



